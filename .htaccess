# Enable mod_rewrite
RewriteEngine On

# Remove .html extension from URLs
# Redirect URLs with .html to extensionless versions
RewriteCond %{THE_REQUEST} ^GET\ /[^?\s]+\.html
RewriteRule ^(.*)\.html$ /$1 [R=301,L,NE]

# Serve .html file when extensionless URL is requested
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Force HTTPS (optional, uncomment if you have SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Prevent directory browsing
Options -Indexes

# Set default charset to UTF-8
AddDefaultCharset UTF-8

# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # HTML - 1 hour
  ExpiresByType text/html "access plus 1 hour"
  
  # CSS and JavaScript - 1 year
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # Images - 1 month
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  
  # Fonts - 1 year
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  
  # Default - 1 day
  ExpiresDefault "access plus 1 day"
</IfModule>

# Set proper MIME types
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType text/css css
  AddType image/svg+xml svg svgz
  AddType image/webp webp
  AddType font/woff woff
  AddType font/woff2 woff2
</IfModule>

# Security headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Remove server signature
  Header unset Server
  Header unset X-Powered-By
</IfModule>

# Custom error pages
ErrorDocument 404 /404.html
