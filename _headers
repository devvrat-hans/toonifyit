# Security headers (applied to all pages)
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Resource-Policy: same-origin

# Cache static assets for 1 year (immutable)
/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

/img/*
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML files for 1 hour (revalidate frequently)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Cache root HTML for 1 hour
/
  Cache-Control: public, max-age=3600, must-revalidate

# Cache favicons for 1 week
/favicon.ico
  Cache-Control: public, max-age=604800

# Cache fonts for 1 year (if any)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Cache sitemap for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400

# Cache robots.txt for 1 day
/robots.txt
  Cache-Control: public, max-age=86400

